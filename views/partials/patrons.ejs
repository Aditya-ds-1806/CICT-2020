<% patrons.forEach(patron => { %>
<div class="row row-reverse justify-content-between align-items-center mb-5 py-5">
    <div class="col-md-7 col-lg-8 order-1 order-md-0">
        <header>
            <h1 class="text-bahama-blue font-size-2 font-weight-bold"><%= patron.name %></h1>
            <h2 class="text-bahama-blue font-size-2 font-weight-regular">Director, <%= patron.institute %></h2>
        </header>
        <main>
            <p class="mt-5 text-justify"><%= patron.description %></p>
        </main>
    </div>
    <div class="col-md-4 col-lg-3 text-center order-0 order-md-1 mb-3 pb-5 mb-md-0 pb-md-0">
        <a href="<%= patron.profile %>" target="_blank">
            <img loading="lazy" src="<%= patron.image %>" class="img-fluid px-3 px-md-0" alt="<%= patron.name %>">
        </a>
    </div>
</div>
<% }); %>