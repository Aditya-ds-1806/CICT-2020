<% if (typeof route !== 'undefined' && route === 'index') { %>
<script>
    const child = document.querySelector('#child');
    const parent = document.querySelector('#parent');
    window.addEventListener('load', adjustMarginBottom);
    window.addEventListener('resize', adjustMarginBottom);
    window.addEventListener('orientationchange', adjustMarginBottom);

    function adjustMarginBottom() {
        if (window.innerWidth > 992) child.style.marginBottom = `${-0.5 * parent.offsetHeight}px`;
        else child.style.marginBottom = 0;
    }
</script>
<% } else if (typeof route !== 'undefined' && route === 'commit tees') { %>
<script>
    document.querySelectorAll('section ul>li>a').forEach(pill => pill.addEventListener('click', function () { document.querySelector("#topic").textContent = this.textContent }));
</script>
<% } %>

<!-- menu -->
<script>
    window.onload = function () {
        var authors = $('#authors');
        var authorsBtn = $('#auth-btn')
        var programsBtn = $('#prog-btn');
        var programs = $('#programs');
        var close = $('#close');
        authors.removeClass('d-none');
        programs.removeClass('d-none');
        authors.slideUp();
        programs.slideUp();

        close.on('click', function (e) {
            this.parentElement.parentElement.classList.remove('open-menu');
            this.parentElement.parentElement.classList.add('close-menu');
        });
        authorsBtn.on('click', function (e) {
            e.preventDefault();
            authors.removeClass('d-none');
            authors.slideToggle();
            authorsBtn.toggleClass('text-white text-bahama-blue bg-white');
        });
        programsBtn.on('click', function (e) {
            e.preventDefault();
            programs.removeClass('d-none');
            programs.slideToggle();
            programsBtn.toggleClass('text-white text-bahama-blue bg-white');

        });
    }

</script>