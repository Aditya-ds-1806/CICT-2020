<script>
    feather.replace();
    const child = document.querySelector('#child');
    const parent = document.querySelector('#parent');
    document.body.onload = adjustMarginBottom;
    window.addEventListener('resize', adjustMarginBottom);
    window.addEventListener('orientationchange', adjustMarginBottom);

    function adjustMarginBottom() {
        if (window.innerWidth > 992) child.style.marginBottom = `${-0.5 * parent.offsetHeight}px`;
        else child.style.marginBottom = 0;
    }
</script>