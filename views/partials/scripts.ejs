<% } else if (typeof route !== 'undefined' && route === 'committees') { %>
<script>
    document.querySelectorAll('section ul>li>a').forEach(pill => pill.addEventListener('click', function () {
        document.querySelector("#topic").textContent = this.textContent;
        window.scroll(0, window.innerHeight);
    }));
    document.querySelectorAll('div.dropdown-menu>a').forEach(item => item.addEventListener('click', function (e) {
        e.preventDefault();
        document.querySelector("#topic").textContent = this.textContent;
        document.querySelector("#menu-topic").textContent = this.textContent;
        setTimeout(function () { this.classList.remove('active') }.bind(this), 500);
        window.scroll(0, window.innerHeight);
    }));
</script>
